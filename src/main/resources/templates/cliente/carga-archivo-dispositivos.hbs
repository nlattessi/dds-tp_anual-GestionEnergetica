{{#partial "contenido_cliente"}}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
        <div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
        </div>
        <div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
        </div>
    </div>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Carga de archivo de dispositivos</h1>
    </div>

    <div class="row">
        <div class="col-sm">
            <p class="lead">
                Ejemplo de archivo json con el formato adecuado para cargar dispositivos
            </p>
            <pre><code>
            [
                {
                    "dispositivo_maestro_id": 1,
                    "uso_mensual_minimo_horas": 30,
                    "uso_mensual_maximo_horas": 360
                },
                {
                    "dispositivo_maestro_id": 2,
                    "uso_mensual_minimo_horas": 20,
                    "uso_mensual_maximo_horas": 90
                }
            ]
            </code></pre>
        </div>
    </div>

    <div class="row">
        <div class="col-sm">
            <p>Dispositivos maestros disponibles. Utilice el valor de <b>id</b> para armar el archivo de carga</p>
            <ul class="list-group">
                {{#each dispositivoMaestros}}
                <li class="list-group-item">id: {{id}} // {{categoria}} - {{nombre}}</li>
                {{/each}}

            </ul>
        </div>
    </div>

    <hr>

    <div class="row pb-5">
        <div class="col-md">
            <h4>Formulario de Carga</h4>
            <form action="/cliente/carga-archivo-dispositivos" method="POST" enctype='multipart/form-data'>

                <div class="form-group">
                    <label for="dispositivos_file">Archivo de dispositivos</label>
                    <input type="file" class="form-control-file" id="dispositivos_file" name="dispositivos_file">
                </div>

                <button type="submit" class="btn btn-primary">Cargar</button>
            </form>
        </div>
    </div>




</main>

{{/partial}}

{{>cliente/layout_cliente.hbs}}