{{#partial "contenido_cliente"}}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
        <div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
        </div>
        <div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
        </div>
    </div>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Simplex y hogar eficiente: Resultado </h1>
    </div>

	<h1 class="h4">Resultados Simplex</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Dispositivo</th>
                    <th>Equipo concreto</th>
                    <th>Consumo recomendado medido en cantidad de horas por mes</th>
                </tr>
            </thead>
            <tbody>
                {{#each dispositivosSimplex}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{categoria}}</td>
                    <td>{{nombre}}</td>
                    <td>{{consumoRecomendadoHoras}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    
    <hr>
    
    <h1 class="h4">Eficiencia de tus dispositivos en el mes en curso (de {{inicio}} a {{fin}})</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Dispositivo</th>
                    <th>Equipo concreto</th>
                    <th>Horas de consumo</th>
                    <th>¿Es eficiente?</th>
                </tr>
            </thead>
            <tbody>
                {{#each dispositivosHogarEficiente}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{categoria}}</td>
                    <td>{{nombre}}</td>
                    <td>{{horas}}</td>
                    <td class="{{#if eficiente}}text-success{{else}}text-danger{{/if}}">{{isTrue eficiente}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    
    <hr>
    
    <h1 class="h4">¿Es tu hogar eficiente?</h1>
    {{#if hogarEficiente}}
    <p>
        Tu hogar <b class="text-success">es eficiente</b>. ¡Felicitaciones!
    </p>
    {{else}}
    <p>
        Tu hogar <b  class="text-danger">no es eficiente...</b> ¡usá la información provista para mejorarlo!
    </p>
    {{/if}}

</main>
{{/partial}}

{{>cliente/layout_cliente.hbs}}